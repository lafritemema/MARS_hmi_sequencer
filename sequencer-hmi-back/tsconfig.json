{
  "compilerOptions": {
    "preserveConstEnums": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution":"node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "strictFunctionTypes": true,
    "sourceMap": false,
    "outDir": "bin",
    "resolveJsonModule": true,
    "noStrictGenericChecks" : true,
    "baseUrl": ".",
    "paths": {
      "@server/*":["src/server/*"],
      "@common/*":["src/common/*"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}